{
  "functions": {
    // Definisi fungsi Serverless: semua file PHP di root folder
    "*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    // Route 1: Mengizinkan akses langsung ke file PHP (misal: /add.php)
    {
      "src": "/(.*)\\.php",
      "dest": "/$1.php"
    },
    // Route 2: Mengarahkan permintaan root (saat membuka domain) ke index.php
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
